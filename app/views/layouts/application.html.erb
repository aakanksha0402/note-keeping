<!DOCTYPE html>
<html>
  <head>
    <title>Simple Note Keeping</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= yield :body_class %>">
    <%= nav_bar static: :top, brand: "Simpler Notes", responsive: true do %>
      <%= menu_group do %>
        <%= menu_item "Notes", root_path %>
      <% end %>
      <%= menu_group pull: :right do %>
        <% if current_user %>
          <%= menu_item "Log Out (#{current_user.email})", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= menu_item "Log In", user_session_path %>
          <%= menu_item "Sign Up", new_user_registration_path %>
        <% end %>
      <% end %>
    <% end %>

    <%= yield %>
  </body>
</html>
