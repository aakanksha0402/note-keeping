<div>
  <h4 class="muted">Add Tags</h4>
  <%= form_tag add_tags_note_path(@note), remote: true do %>
    <div class="form-group">
      <%= label_tag :tags, 'Tags' %>
      <%= text_field_tag :tags, '', class: "form-control" %>
      <small id="tagHelp" class="form-text text-muted">Comma Seperated values.</small>
    </div>

    <%= submit_tag "Add", class: "btn btn-primary" %>
  <% end %>
</div>
<br>

<div>
  <% tags = @note.tags %>
  <% if tags.present? %>
    <h4 class="muted">Tags added</h4>
    <ul class="nav flex-column">
      <% @note.tags.each do |tag| %>

        <li class="nav-item label label-default tags">
          <span><%= tag.name %></span>
          <span>
            <%= link_to "X", remove_tag_note_path(tag_id: tag.id), remote: true, method: :delete, class: 'cross' %>
          </span>
        </li>
      <% end %>
    </ul>
  <% else %>
    <h5 class="muted">No tag has been added to this note yet.</h5>
  <% end %>
</div>

<hr><br>
